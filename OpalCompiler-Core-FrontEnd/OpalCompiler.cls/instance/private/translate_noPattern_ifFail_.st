translate: aStream noPattern: noPattern ifFail: failBlock	| aMethodNode |	[ aMethodNode := self parse: aStream noPattern: noPattern]		on: SyntaxErrorNotification, OCBackendError 		do: [:ex |			self interactive ifTrue: [  			requestor					notify: ex errorMessage , ' ->'					at: ex location					in: ex errorCode. ].				  ^failBlock value].	^aMethodNode doSemanticAnalysisIn: class interactive: self interactive  notifying: requestor			