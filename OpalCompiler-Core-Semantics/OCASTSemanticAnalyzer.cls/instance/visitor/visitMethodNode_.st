visitMethodNode: aMethodNode		scope := scope newMethodScope.	aMethodNode scope: scope.  scope node: aMethodNode.	aMethodNode arguments do: [:node | (self declareVariableNode: node) markArg].	aMethodNode pragmas do: [:each | self visitNode: each].	self visitNode: aMethodNode body.		scope outerScope outerScope  ifNotNil: [:classScope | classScope classEncoding needsLongForm ifTrue: [		aMethodNode propertyAt: #needsLongForm put: true]].	scope := scope outerScope.