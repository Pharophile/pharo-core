initialize	session := nil asValueHolder.	super initialize.		needRefresh := false.		self announcer weak		on: WidgetBuilt do:[ needRefresh:= true ].			self whenWindowChanged: [:w | w whenClosedDo: [ self close ] ].		session whenChangedDo: [:newSession :oldSession |		self removeActionsForSession: oldSession.		self registerActionsForSession: newSession.		self updateToolbarFromSession: newSession.		self updateStackFromSession: newSession ].