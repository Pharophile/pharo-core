newColumn: aBlock right: aNumber		aNumber isInteger		ifTrue: [ 			self 				newColumn: aBlock  				origin: 0@0 				corner: 1@1 				offsetOrigin: 0@0 				offsetCorner: (aNumber negated)@0 ]		ifFalse: [ 			self 				newColumn: aBlock  				origin: 0@0 				corner: (1-aNumber)@1				offsetOrigin: 0@0 				offsetCorner: 0@0 ]