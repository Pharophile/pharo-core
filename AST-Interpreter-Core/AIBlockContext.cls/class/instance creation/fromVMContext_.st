fromVMContext: aBlockContext	|sender|	sender := aBlockContext sender.	^ self new 		initializeContext: aBlockContext;		homeContext: aBlockContext home asASTInterpreterContext ; 		closure: aBlockContext closure asASTBlockClosure;		exceptionHandler: (sender isNil not ifTrue: [ 			sender isHandlerContext ifTrue: [				(ExceptionHandler on: (sender tempAt: 1) do: (sender tempAt: 2)) enabled: (sender tempAt: 1)]			]) ;		yourself