compilerSettingsOn: aBuilder	<systemsettings> 	(aBuilder group: #compiler) 		label: 'Compiler';  		with: [			(aBuilder pickOne: #compilerClass)			      target: SmalltalkImage;				label: 'Default Compiler';				domainValues: {Compiler. OpalCompiler}.						(aBuilder setting: #allowNonBooleanReceivers) 				target: OpalCompiler;				label: 'Allow non-boolean optimized sends' ; 		 		description: 'If checked we do magic'.]