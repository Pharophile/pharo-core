compilerSettingsOn: aBuilder	<systemsettings> 	(aBuilder group: #compiler) 		label: 'Compiler';  		with: [			(aBuilder setting: #warningAllowed)				label: 'More warnings' translated;				target: Parser;				description: 'Ask the user for certain situation such as use of undefined variables' translated.							(aBuilder pickOne: #compilerClass)			      target: SmalltalkImage;				label: 'Default Compiler';				domainValues: {Compiler. OpalCompiler}.					(aBuilder setting: #allowNonBooleanReceivers) 				target: OpalCompiler;				label: 'Allow non-boolean optimized sends' ; 		 		description: 'If checked we do magic'.]