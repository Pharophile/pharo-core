beCurrentWorld	| morphs  |	owner := nil.	morphs := World submorphs.	Sensor		flushNonKbdEvents;		flushKeyboard;		flushEvents;		shutDown.	self class shutDown.	worldState := WorldState new.	self addHand: HandMorph new.		self borderWidth: 0.	self viewBox: Display boundingBox.	self borderWidth: 0.	"default"	self color: self class defaultWorldColor.	self addAllMorphs: morphs.	SystemWindow noteTopWindowIn: self.	World  := self.	ActiveWorld := self.	ActiveHand := self hands first.	"default"	ActiveEvent := nil.	worldState handsDo: [:h | h releaseCachedState].	Sensor startUp.	self class startUp.	self displayWorldSafely.