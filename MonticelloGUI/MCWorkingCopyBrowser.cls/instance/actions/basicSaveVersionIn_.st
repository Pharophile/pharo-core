basicSaveVersionIn: aRepository	| newVersion waitForVersion |	waitForVersion := Semaphore new.		WorldState addDeferredUIMessage: [		newVersion := workingCopy newVersion.		waitForVersion signal ].		Processor activeProcess == UIManager default uiProcess		ifFalse: [ waitForVersion wait ].	newVersion ifNil: [ ^ self ]. 		Cursor wait showWhile: [		[ aRepository storeVersion: newVersion.		aRepository storeDependencies: newVersion ] 			ensure: [ (MCVersionInspector new version: newVersion) show ]]